{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "api/**/*.ts",
    "utils/**/*.ts",
    "generate.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
